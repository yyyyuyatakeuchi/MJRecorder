<% if @score_record%>
  <%= form_tag(records_path, method: :post, local: true) do |f| %>
    <%= hidden_field_tag :result_point, @result_point %>
    <%= hidden_field_tag :score, @score_record %>
    <%= hidden_field_tag :match_count, @match_count %>
    <%= hidden_field_tag :rate, @rate %>
    <%= hidden_field_tag :rank, @rank %>
    <%= hidden_field_tag :base_point, @base_point %>
    <%= submit_tag "保存する", class: 'record_btn' %>
  <% end %>
<% end %>