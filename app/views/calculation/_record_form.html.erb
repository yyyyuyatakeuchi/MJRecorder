<% if @score_record%>
  <%= form_for(mypage_path(current_user), local: true) do |f| %>
    <%= f.hidden_field :result_score, :value => @result_point %>
    <%= f.hidden_field :score, :value => @score_record %>
    <%= f.hidden_field :match_count, :value => @match_count %>
    <%= f.hidden_field :rate, :value => @rate %>
    <%= f.hidden_field :rank, :value => @rank %>
    <%= f.hidden_field :basePoint, :value => @basePoint %>
    <%= f.submit "保存" %>
  <% end %>
  <%= link_to "OK", 'score_record/create'  %>
<% end %>